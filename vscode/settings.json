{
    "editor.minimap.enabled": false,
    "files.associations": {
        "*.feature": "yaml",
    },
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["<C-e>"],
            "after": ["<C-o>", "A"]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
          "before": ["<C-n>"],
          "commands": [":nohl"]
        },
        {
            "before": ["g", "l"],
            "commands": ["workbench.action.navigateRight"]
        },
        {
            "before": ["g", "h"],
            "commands": ["workbench.action.navigateLeft"]
        },
    ],
}
